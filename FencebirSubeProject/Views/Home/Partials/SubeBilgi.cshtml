@model List<SubeViewModel>

<style type="text/css">
    .thumb:hover {
        opacity: 0.8;
        transition: all 0.2s ease-in-out;
    }
</style>

<section class="bg-lighter">
    <div class="container pb-60">
        <div class="section-title mb-10">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="mt-0 text-uppercase font-28 line-bottom line-height-1">FENCEBİR <span class="text-theme-color-2 font-weight-400">ŞUBELER</span></h2>
                </div>
            </div>
        </div>
        <div class="section-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="owl-carousel-4col" data-dots="true">
                        @foreach (var sube in Model)
                        {
                            <div class="item">
                                <div class="service-block bg-white">
                                    <div class="thumb">
                                        <img alt="featured project" src="/Uploads/Site/logo_2.png" class="img-fullwidth">
                                        <h4 class="text-white mt-0 mb-0"><span class="price">@sube.SubeSehir</span></h4>
                                    </div>
                                    <div class="content text-left flip p-25 pt-0">
                                        <h4 class="line-bottom mb-10">@sube.SubeAdi</h4>
                                        <p>Açıklama...</p>
                                        <a class="btn btn-dark btn-theme-colored btn-sm text-uppercase mt-10" href="#">Siteye Git</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>