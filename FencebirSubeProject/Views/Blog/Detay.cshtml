@model BlogViewModel
@{
    ViewData["Title"] = "Blog Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/Uploads/TopBanner/TopBanner_1.jpg">
    <div class="container pt-70 pb-20">
        <div class="section-content">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="title text-white">BLOG</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="blog-posts single-post">
                    <article class="post clearfix mb-0">
                        <div class="entry-header">
                            <div class="post-thumb thumb"> <img src="@Model.Resim" alt="" class="img-responsive img-fullwidth"> </div>
                        </div>
                        <div class="entry-title pt-10 pl-15">
                            <h4><a class="text-uppercase" href="">@Model.Baslik</a></h4>
                        </div>
                        <div class="entry-meta pl-15">
                            <ul class="list-inline">
                                <li>Tarih: <span class="text-theme-color-2"> @Model.YayinTarihi.ToString("dd.MM.yyyy")</span></li>                              
                            </ul>
                        </div>
                        <div class="entry-content mt-10">
                            <p class="mb-15">@Html.Raw(Model.Icerik)</p>                          
                        </div>
                    </article>
                    <div class="tagline p-0 pt-20 mt-5">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="tags">
                                    <p class="mb-0"><i class="fa fa-tags text-theme-color-2"></i> <span>Etiketler:</span> @Model.Etiketler</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="share text-right">
                                    <p><i class="fa fa-eye text-theme-color-2"></i> @Model.OkunmaSayisi Görüntüleme</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>